# Environment Configuration for IoT Smart Parking System
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://parking_user:secure_password@localhost:5432/parking_db
POSTGRES_DB=parking_db
POSTGRES_USER=parking_user
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_PASSWORD=redis_password

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=parking_system
MQTT_PASSWORD=mqtt_password
MQTT_KEEPALIVE=60

# Flask Application
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
FLASK_ENV=development
FLASK_DEBUG=True

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# API Configuration
API_BASE_URL=http://localhost:5000
WEBSOCKET_URL=http://localhost:5000

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:5000
VITE_WEBSOCKET_URL=http://localhost:5000
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@smartparking.com

# Monitoring Configuration (Optional)
GRAFANA_ADMIN_PASSWORD=admin_password
PROMETHEUS_RETENTION_TIME=15d

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/parking/app.log

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=parking-system-backups

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS_PER_WORKER=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache Configuration
CACHE_TTL=300  # 5 minutes
CACHE_MAX_ENTRIES=10000

# Sensor Configuration
SENSOR_DATA_RETENTION_DAYS=90
SENSOR_HEARTBEAT_TIMEOUT=300  # 5 minutes
SENSOR_OFFLINE_THRESHOLD=600  # 10 minutes

# Reservation Configuration
RESERVATION_MAX_DURATION_HOURS=24
RESERVATION_MIN_DURATION_MINUTES=30
RESERVATION_ADVANCE_BOOKING_DAYS=7
PAYMENT_TIMEOUT_MINUTES=15

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_PROCESSING_INTERVAL=3600  # 1 hour
PREDICTION_MODEL_UPDATE_INTERVAL=86400  # 24 hours

# Development Configuration
DEV_MOCK_SENSORS=false
DEV_MOCK_PAYMENTS=false
DEV_AUTO_SEED_DATA=true